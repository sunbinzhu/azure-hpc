                "constraints": {
                  "required": true,
                  "regex": "^[a-zA-Z][a-zA-Z0-9-]{1,11}$",
                  "validationMessage": "Must be no more than 12 characters, begin with a letter, and contain only letters, numbers and hyphens"
                }
              }
            ],
