              },
              {
                "name": "dataDiskSize",
                "type": "Microsoft.Common.DropDown",
                "label": "Size of data disk(GB)",
                "defaultValue": "128",
                "toolTip": "The size in GB for each data disk.",
                "constraints": {
                  "allowedValues": [
                    {
                      "label": "32",
