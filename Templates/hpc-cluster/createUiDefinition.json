                    },
                    {
                      "label": "64",
                      "value": 64
                    },
                    {
                      "label": "128",
                      "value": 128
                    },
                    {
                      "label": "256",
                      "value": 256
                    },
                    {
                      "label": "512",
                      "value": 512
                    },
                    {
                      "label": "1024",
                      "value": 1024
                    },
                    {
                      "label": "2048",
                      "value": 2048
                    },
                    {
                      "label": "4096",
                      "value": 4096
                    }
                  ]
                }
              },
              {
                "name": "headNodeDataDiskCount",
                "type": "Microsoft.Common.DropDown",
                "label": "Data disk number for head node",
                "defaultValue": "0",
                "toolTip": "The number of data disks attached to the head node",
                "constraints": {
                  "allowedValues": [
                    {
                      "label": "0",
                      "value": 0
                    },
                    {
                      "label": "1",
                      "value": 1
                    },
                    {
                      "label": "2",
                      "value": 2
                    },
                    {
                      "label": "4",
                      "value": 4
                    }
                  ]
                }
              },
              {
                "name": "headNodeDataDiskTypeWarning",
                "type": "Microsoft.Common.InfoBox",
